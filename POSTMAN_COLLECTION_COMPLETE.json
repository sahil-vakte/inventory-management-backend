			"item": [
				{
					"name": "Register New User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"newuser\",\n  \"email\": \"newuser@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\"\n}\n\n// Creates a new user account\n// Returns access and refresh JWT tokens"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/register/",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "register", ""]
						},
						"description": "Register a new user account. Returns JWT access and refresh tokens."
					}
				},
				{
					"name": "Login (Get JWT Token)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.collectionVariables.set(\"access_token\", jsonData.access);",
									"pm.collectionVariables.set(\"refresh_token\", jsonData.refresh);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}\n\n// Login with username and password\n// Returns JWT access token (valid for 1 hour) and refresh token (valid for 1 day)\n// Access token is automatically saved to collection variables"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/login/",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "login", ""]
						},
						"description": "Authenticate user and obtain JWT access and refresh tokens."
					}
				},
				{
					"name": "Refresh Token",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}\n\n// Use refresh token to get a new access token\n// Required when access token expires (after 1 hour)"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/token/refresh/",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "token", "refresh", ""]
						},
						"description": "Refresh expired access token using refresh token."
					}
				},
				{
					"name": "Verify Token",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"{{access_token}}\"\n}\n\n// Verify if an access token is still valid\n// Returns 200 if valid, 401 if expired or invalid"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/token/verify/",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "token", "verify", ""]
						},
						"description": "Verify if a JWT token is valid."
					}
				},
				{
					"name": "Get User Info",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/user/",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "user", ""]
						},
						"description": "Get current authenticated user information."
					}
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}\n\n// Logout and blacklist the refresh token\n// After this, the refresh token cannot be used to get new access tokens"
